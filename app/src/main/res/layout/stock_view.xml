<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/button_item"
    android:clickable="true"
    android:checkable="true"
    android:focusable="true"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:id="@+id/line_snippe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/line_snippe">

        <!-- Company ticker -->
        <TextView
            android:id="@+id/symbol"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="72dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="204dp"
            android:layout_marginBottom="30dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="2sp"
            android:text="AAPL"
            android:textAppearance="@style/aapl" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="72dp"
            android:layout_marginTop="38dp"
            android:gravity="top"
            android:lineSpacingExtra="3sp"
            android:text="Apple"
            android:textAppearance="@style/company_nam"
            android:translationY="-1.3sp" />

        <!-- AAPL -->
        <ImageView
            android:id="@+id/apple_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/ic_apple" />

        <!-- Current Price -->
        <TextView
            android:id="@+id/currentPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="17dp"
            android:gravity="end"
            android:lineSpacingExtra="2sp"
            android:text="$131.93"
            android:textAppearance="@style/current_price"
            android:translationY="-1.03sp" />

        <!-- Day Delta -->

        <!-- Path -->

        <TextView
            android:id="@+id/changePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/currentPrice"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="238dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="14dp"
            android:gravity="end"
            android:lineSpacingExtra="1sp"
            android:text="@string/delta"
            android:textAppearance="@style/day_delta_plus"
            android:translationY="-0.69sp" />

        <ImageView
            android:id="@+id/favouriteImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-190dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/symbol"
            app:srcCompat="@drawable/ic_star" />
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>

